#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "$SCRIPT_DIR/.." && pwd)"

if [ -f "$ROOT_DIR/.env" ]; then
  set -a
  source "$ROOT_DIR/.env"
  set +a
fi

WINDOW_HOURS="${REQTRACK_KPI_WEEKLY_WINDOW_HOURS:-168}"

exec "$SCRIPT_DIR/reqtrack" --kpi-report --kpi-window-hours "$WINDOW_HOURS" "$@"
