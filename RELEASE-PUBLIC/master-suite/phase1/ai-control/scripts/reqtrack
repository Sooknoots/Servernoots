#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "$SCRIPT_DIR/.." && pwd)"

if [ -f "$ROOT_DIR/.env" ]; then
  set -a
  source "$ROOT_DIR/.env"
  set +a
fi

if [ -f "$ROOT_DIR/.env.secrets" ]; then
  set -a
  source "$ROOT_DIR/.env.secrets"
  set +a
fi

exec python3 "$SCRIPT_DIR/track-stale-media-requests.py" "$@"
